{
  "compilerOptions": {
    "removeComments": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "module": "es2015",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [ "src" ],
  "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
      "rewriteTsconfig": false
  }
}
